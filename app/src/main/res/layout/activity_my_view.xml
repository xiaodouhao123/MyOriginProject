<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyViewActivity">

    <com.example.myorigindemo.myview.ShapeView
        android:background="@color/colorPrimary"
        android:id="@+id/shapeView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:visibility="gone"
        android:textSize="50sp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/shapeView"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="A"
        android:textColor="#ffffffff"
        android:id="@+id/tv_slide_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_below="@id/shapeView"
        android:id="@+id/bt_change_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Button"
         />
    <com.example.myorigindemo.myview.LetterSideBar
        android:id="@+id/ls"
        app:textSize="15sp"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</RelativeLayout>